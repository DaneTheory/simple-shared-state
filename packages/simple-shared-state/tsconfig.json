{
	"typeAcquisition": {
		"include": [ "jest" ]
	},
	"compilerOptions": {
		"outDir": "dist",
		"allowJs": true,
		"moduleResolution": "node",
		"target": "es2015",
		"noImplicitAny": true,
		"removeComments": false,
		"preserveConstEnums": true,
		"sourceMap": true,
		"declaration": true
	},
	"include": [
		"./src/*"
	],
	"exclude": [
		"./node_modules",
		"./test/*"
	]
}